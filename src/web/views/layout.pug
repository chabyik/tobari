doctype html
html(lang="kr")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr", crossorigin="anonymous")
        script(src="https://unpkg.com/twemoji@latest/dist/twemoji.min.js", crossorigin="anonymous")
        block head
        style. 
            @font-face {
                font-family: 'Paperlogy-5Medium';
                src: url("/fonts/Paperlogy-5Medium.ttf") format("truetype");
                font-style: normal;
            }

            img.emoji {
                height: 0.9em;
                width: 0.9em;
                margin: 0 .05em 0 .1em;
                vertical-align: -0.05em;
            }

            body {
                font-family: 'Paperlogy-5Medium';
            }
    body.d-flex.flex-column.min-vh-100
        .container.border-bottom.py-1
            nav.navbar.navbar-expand-lg.bg-body-primary
                .container-fluid
                    a.navbar-brand(href="/") chabyik's minecraft
                    button.navbar-toggler(
                        type="button",
                        data-bs-toggle="collapse",
                        data-bs-target="#navbarNav",
                        aria-controls="navbarNav",
                        aria-expanded="false",
                        aria-label="Toggle navigation"
                    )
                        span.navbar-toggler-icon
                    .collapse.navbar-collapse#navbarNav
                        ul.navbar-nav
                            li.nav-item
                                a.nav-link(href="/") Home
                            li.nav-item
                                a.nav-link(href="/about") About
                            li.nav-item
                                a.nav-link(href="/control") Control
                        ul.navbar-nav.ms-auto
                            li.nav-item
                                button.btn.btn-outline-success(type="button", onclick="location.href = '/login'") Login
        main.flex-grow-1.mt-3
            .container
                block content
        footer.footer.mt-auto.text-center
            .container.py-3
                p.text-black-50 Copyright 2025. chabyik all rights reserved.
            
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js", integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q", crossorigin="anonymous")
        script.
            twemoji.parse(document.body, { base: 'https://cdn.jsdelivr.net/gh/twitter/twemoji@14.0.2/assets/' });